rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read for images
    match /images/{imageId} {
      allow read: if true;
    }

    // Allow public read for PDFs
    match /pdfs/{pdfId} {
      allow read: if true;
    }

    // Allow authenticated admins to upload to an 'admin' path
    match /admin/{fileName} {
      allow write: if request.auth != null && request.auth.token.admin == true;
      allow read: if true; // Admins can read their uploads
    }
  }
}
